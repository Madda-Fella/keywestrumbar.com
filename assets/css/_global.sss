body
  font: normal 100%/150%
  font-family: var(--bodyFont)
  font-size: responsive 16px 18px

  &.modal-shown
    overflow: hidden

main
  /* remove this after dev */
  min-height: 80vh
  position: relative

ul
  list-style: none

li,
a
  text-decoration: none

h1,
h2,
h3,
h4
  font-family: var(--headerFont)

h1,
.h1
  font-size: 2.8rem

h2,
.h2
  font-size: 2rem

// layout
.row
  position: relative
  max-width: 1200px
  padding: 0
  height: auto
  margin: 0 auto
  width: 90%
  //@include clearfix();}

  &.sm
    max-width: 800px

  & .xs
    max-width: 500px

  & .no-max
    max-width:unset

.flex
  display: flex

  @media screen and (max-width: 600px)
    flex-direction: column

  &.justify-sb
    justify-content: space-between

.columns
  //margin-left: 4.4%
  height: auto
  min-height: 1px

  &:first-child
    margin-left: 0px

  &.one
    width: 4.3%

  &.two
    width: 13%

  &.three
    width: 21.68%

  &.four
    width: 30.4%

    @media screen and (max-width: 1000px)
      width: auto

  &.five
    width: 39.1%

  &.six
    width: 47.8%

  &.seven
    width: 56.5%

  &.eight
    width: 65.2%

  &.nine
    width: 73.9%

  &.ten
    width: 82.6%

  &.eleven
    width: 91.3%

  &.twelve
    width: 100%
    margin-left: 0px

.is-hidden
  display: none

// icons
svg
  &.icon
    display: inline-block
    fill: var(--brown)
    height: 1.5rem
    vertical-align: middle
    width: 1.5rem
